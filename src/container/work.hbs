<div>
     {{#with main}}
<main>
    <section>
        {{>title data="Work history" big = true}}
        <div>
        <ul>
            {{#each work}}
            <li>
                <div>{{position}}</div>
                <br>
                <div>
                    {{duration.from}} -
                     {{#if duration.to}}
                     {{duration.to}}
                     {{else}}
                     (досі працюю)
                     {{/if}}
                        </div>
              
                <br>

               <div>
                {{#if company.url}}
                 {{> link text=company.name href=company.url blank=true noLine=true }}
               {{else}}
               <b>{{company.name}}</b>
                {{/if}}
                </div>
               <br>
               <br>
               <div>
                
                <strong> Projects({{projectAmount}})</strong>
               </div>
               
               <br>
               <ul>
                {{#each projects}}
                <li>
                    <div>{{> link text=name href=url blank=true noLine=true}}</div>
                 <br>
                 <div>
                    <p>{{about}}</p>
                 </div>
                <br>
                <div><em>Stacks ({{stackAmount}})</em></div>
                <br>
                <div>
                 <ul>
                    {{#each stacks}}
                    <li>{{name}}</li>
                    {{/each}}
                 </ul>
                  </div>

                  <br>
                  <div> <em>Awards</em></div>
                  <div>
                    <ul>
                        {{#each awards}}
                        <li>{{name}}</li>
                        {{/each}}
                    </ul>
                  </div>
                </li>
               {{/each}} 
            </ul>
            </li>
            {{/each}}
            </ul>
            </div>
             <br>
               <div><strong>Stack amount ({{stackAmount}})</strong></div>
                <div><strong>Award Amount ({{awardAmount}})</strong></div>
            </section>
</main>
{{/with}}
</div>